<p></p>

<h1>People</h1>

<table>
    <thead>
    <tr>
        <td>Name:</td>
        <td>Email:</td>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
        <tr>
            <td><%= person[:name] %></td>
            <td><%= person[:email] %></td>
        </tr>
    <% end %>
    </tbody>

    <tfoot>
    <tr>
        <td>Total:</td>
        <td><%= @people.size %></td>
    </tr>
    </tfoot>

</table>


<row>
    <column cols="5">

        <h2>New person</h2>

        <%= form_tag 'people', class: :forms do %>
            <section>
                <label>Name</label>
                <%= text_field_tag :name %>
            </section>
            <section>
                <label>Email</label>
                <%= text_field_tag :email %>
            </section>
            <section>
                <button type="primary">Create</button>
            </section>
        <% end %>

    </column>
</row>
